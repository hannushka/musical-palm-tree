<div class="header">
	<h1>Skapa tävling administration</h1>
</div>

<%= render "layouts/nav" %>

<div class="content">
	<%= form_for @contest, html: { class: 'edit-contest-form' } do |f| -%>
		<%= f.hidden_field :completed, value: false %>
		
		Namn på tävling *
		<%= f.text_field :name %>

		<span class="date-description">Sista chansen att skicka in bidrag</span>
		<%= f.datetime_local_field :end_date, value: @contest.end_date %>

		<%= f.fields_for :contestants do |b| %>
			<%= b.hidden_field :start_nbr, value: b.object.start_nbr %>
			<div class="contestant"> 
				Låt #<%= b.object.start_nbr %>
				<div class="input-field">
					<%= f.label :titel %>
					<%= b.text_field :title %>
				</div>
				<div class="input-field">
					<%= f.label :land %>
					<%= b.text_field :country  %>
				</div>
			</div>
		<% end %>
		<%= f.submit "Spara ändringar", class: "submit"%>
	<% end %>
</div>