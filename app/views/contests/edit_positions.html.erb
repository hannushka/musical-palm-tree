<div class="row">
	<h1>Rätt ordning</h1>
</div>

<%= render "layouts/nav" %>

<%= form_for @contest, html: {class: 'form-horizontal'} do |f| -%>
<%= f.hidden_field :completed, value: true %>
	<%= f.fields_for :contestants do |b| %>
		<div class="form-group">		
			<p>Placering för #<%= b.object.start_nbr %> <%= b.object.complete_title %></p>
			<%= b.select :position, @contest.contestants.order(:country).collect {|p| [ p.start_nbr, p.start_nbr ] }, { prompt: "Välj land" }, { class: 'form-control' } %> 
		</div>
	<% end %>
	<div class="form-group">
		<%= f.submit "Spara rätt ordning", class: "btn btn-default"%>
	</div>
<% end %>